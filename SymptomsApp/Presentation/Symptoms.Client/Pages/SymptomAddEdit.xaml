<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Symptoms.Client.Pages.SymptomAddEdit"
             Title="SymptomAddEdit">
    <VerticalStackLayout Padding="10">
        <!--<Entry x:Name="txtPainType" Placeholder="Code" />
        <Entry x:Name="txtSeverityScale" Placeholder="Name" />
        <Entry x:Name="txtSymptomDurationHours" Placeholder="Price" />-->
        <Label Text="Pain Type" FontAttributes="Bold" />
        <Picker x:Name="pickerPainType" Title="Select Pain Type" />

        <Label Text="Severity Scale" FontAttributes="Bold" />
        <Entry x:Name="txtSeverityScale" Placeholder="Enter Severity Scale" />

        <Label Text="Symptom Duration Hours" FontAttributes="Bold" />
        <Entry x:Name="txtSymptomDurationHours" Placeholder="Enter Symptom Duration Hours" />
        <Button x:Name="btnSave" Text="Save" Margin="0,20" Clicked="btnSave_Clicked" />
        <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" />
    </VerticalStackLayout>
</ContentPage>